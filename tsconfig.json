{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "target": "ES6",

    "module": "CommonJS"
  },
  "exclude": ["node_modules"],
  "include": [
    "./node_modules/@madfish/quipuswap-v3",
    "./build",
    "./sandbox/*.ts",
    "./*.ts",
    "./test/*.ts",
    "./test/**/*.ts",
    "./test/**/**/*.ts",
    "./test/**/**/*.spec.ts"
  ]
}
